- add_breadcrumb I18n.t("breadcrumbs.signup"), :new_user_registration_path
%h2 Регистрация

= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
	= devise_error_messages!

	%div
		= f.label t("registration.nickname")
		= f.text_field :nickname

	%div
		= f.label t("registration.email")
		= f.email_field :email

	%div
		= f.label t("registration.password")
		= f.password_field :password

	%div
		= f.label t("registration.password_confirmation")
		= f.password_field :password_confirmation

	%div
		= f.label t("registration.fio")
		= f.text_field :fio

	%div
		= f.label t("registration.skype")
		= f.text_field :skype

	%div
		= f.label t("registration.avatar")
		= f.file_field :avatar

	= f.submit t("registration.signup")
	

= render "devise/shared/links"