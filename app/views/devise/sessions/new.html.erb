<%- add_breadcrumb I18n.t("breadcrumbs.login"), :user_session_path %>
<h2><%=t('devise.sign_in.title') %></h2>
<%= devise_error_messages!%>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <% flash.each do |key, value| %>
            <div class="alert alert-error session-alert">
              <strong><%= value %></strong>
            </div>
        <% end %>
  <div><%= f.label t('devise.sign_in.nickname') %>
  <%= f.text_field :nickname %></div>
  <br />
  <div><%= f.label t('devise.sign_in.password') %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label t('devise.sign_in.remember') %></div>
  <% end -%>

  <div><%= f.submit t('devise.sign_in.button') %></div>
<% end %>

<%= render "devise/shared/links" %>
